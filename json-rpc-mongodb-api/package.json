{
	"name": "json-rpc-mongodb-api",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"dev": "bun --watch src/server.ts",
		"client": "bun src/client.ts",
		"format": "prettier --write \"src/**/*.ts\"",
		"husky": "husky install",
		"build": "bun build --compile --minify ./src/server.ts --outfile server && bun build --compile --minify ./src/client.ts --outfile client",
		"prod:server": "./server",
		"prod:client": "./client"
	},
	"prisma": {
		"seed": "ts-node --transpile-only --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"dependencies": {
		"@prisma/client": "^5.14.0",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.2",
		"express": "^4.19.2",
		"faker-js": "^1.0.0",
		"joi": "^17.13.1",
		"json-rpc-2.0": "^1.7.0",
		"jsonwebtoken": "^9.0.2"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.4.1",
		"@types/bcryptjs": "^2.4.6",
		"@types/body-parser": "^1.19.5",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^20.12.12",
		"husky": "^9.0.11",
		"prettier": "^3.2.5",
		"prisma": "^5.14.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5"
	}
}
